generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  STUDENT
  PROFESSOR
  ACADEMIC_COORDINATOR
  WELLBEING_STAFF
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  name      String?
  role      Role
  createdAt DateTime @default(now())

  // relaciones opcionales con los perfiles (unidireccional para evitar ciclos)
  professorId           String? @db.ObjectId
  academicCoordinatorId  String? @db.ObjectId
  wellbeingStaffId       String? @db.ObjectId
}

model Professor {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  name  String?
  role  Role
}

model AcademicCoordinator {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  name  String?
  role  Role
}

model WellbeingStaff {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  name  String?
  role  Role
}


model Student {
  id              String  @id @default(auto()) @map("_id") @db.ObjectId
  student_id      String  @unique
  email String @unique
  name  String?
  role  Role
  academic_program String? // Corresponde a 'Programa académico'
  birth_date      String? // Corresponde a 'Fecha de nacimiento', se puede guardar como String o DateTime
  citizen_id      String? // Corresponde a 'Cédula de ciudadanía'
  phone_number    String? // Corresponde a 'Celular'
  risk_score      Float?  // 'Riesgo de deserción'
}

model StudentRecord {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  student_id    String  @unique
  average       Float
  attendance    Int     @db.Int       // 0 a 100
  amount_due    Float
  amount_paid   Float
  late_payment  Boolean
  risk_score    Float?
}